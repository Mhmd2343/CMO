@model DeliveryAppSystem.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}

<h2>Confirm Delete</h2>

<p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>

<form asp-action="DeleteProductConfirmed" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" href="@Url.Action("ManageMenu")">Cancel</a>
</form>
