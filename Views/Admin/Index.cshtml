@model IEnumerable<DeliveryAppSystem.Models.Admin>
@{
    ViewData["Title"] = "Admin List";
}

<h2>Admin List</h2>

<a class="btn btn-primary mb-3" asp-action="Create">Create New Admin</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.FirstName</td>
                <td>@admin.LastName</td>
                <td>@admin.Email</td>
                <td>@admin.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@admin.AdminId">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@admin.AdminId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
