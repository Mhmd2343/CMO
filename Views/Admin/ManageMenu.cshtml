@model List<DeliveryAppSystem.Models.Product>
@{
    ViewData["Title"] = "Manage Menu";
}

<h2>Manage Grocery Menu</h2>

<a class="btn btn-primary" href="@Url.Action("AddProduct")">Add New Product</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price ($)</th>
            <th>Description</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("EditProduct", new { id = item.ProductId })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("DeleteProduct", new { id = item.ProductId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
