@model List<DeliveryAppSystem.Models.RideRequest>

@{
    ViewData["Title"] = "Pending Ride Requests";
}

<h2>Pending Ride Requests</h2>

@if (Model.Count == 0)
{
    <div class="alert alert-info">No pending rides at the moment.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Pickup Location</th>
                <th>Dropoff Location</th>
                <th>Request Time</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ride in Model)
            {
                <tr>
                    <td>@ride.PickupLocation</td>
                    <td>@ride.DropoffLocation</td>
                    <td>@ride.RequestTime.ToString("g")</td>
                    <td>
                        <form asp-action="Accept" asp-controller="Ride" method="post">
                            <input type="hidden" name="id" value="@ride.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Accept</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
