@model DeliveryAppSystem.Models.RideRequest

@{
    ViewData["Title"] = "Rate Your Ride";
}

<h2>Rate Your Ride</h2>

<form asp-action="Rate" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Rating">Rating (1-5)</label>
        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" required />
    </div>

    <div class="form-group">
        <label asp-for="Review">Review</label>
        <textarea asp-for="Review" class="form-control" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
