<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - DeliveryAppSystem</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Site Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DeliveryAppSystem.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Delivery App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Public pages -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Shop" asp-action="Index">CMO Grocery</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ShopOrder" asp-action="UserOrders">My Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Driver" asp-action="Browse">Browse Drivers</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Ride" asp-action="RequestRide">Request Ride</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Delivery" asp-action="TrackOrders">Track Delivery</a>
                        </li>
                     
                    </ul>

                    <ul class="navbar-nav">

                        @if (Context.Session.GetString("AdminId") != null)
                        {
                            <!-- Admin Links -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="AssignDriver">Assign Drivers</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else if (Context.Session.GetString("UserId") != null)
                        {
                            <!-- Logged-in User Links -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Profile">My Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <!-- Guest Links -->
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Login">Admin Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center py-3">
        <div class="container">
            &copy; 2025 - DeliveryAppSystem - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
